{
  "name": "typed-web",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "dependencies": {
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "pnpm -r build",
    "clean": "git clean -fdX -e '!/.env' .",
    "format": "prettier --write .",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "publish-release": "node --env-file .env ./scripts/publish-release.js",
    "publish-release-ci": "node ./scripts/publish-release.js",
    "tag-release": "node ./scripts/tag-release.js",
    "test": "pnpm -r --workspace-concurrency 1 test",
    "typecheck": "pnpm -r --workspace-concurrency 1 typecheck",
    "view-changes": "node ./scripts/view-changes.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "onlyBuiltDependencies": ["@swc/core", "esbuild", "sharp", "workerd"]
  },
  "devDependencies": {
    "eslint-import-resolver-typescript": "^4.4.4"
  }
}
